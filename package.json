{
  "name": "horizonrp-launcher",
  "version": "1.0.47",
  "description": "Launcher oficial de Horizon Roleplay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "samp",
    "launcher",
    "horizonrp"
  ],
  "author": "Horizon RP",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "crypto-js": "^4.1.1",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.1",
    "mysql2": "^3.14.3",
    "node-cron": "^4.2.1",
    "regedit": "^5.1.4",
    "samp-query": "^0.1.5",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.horizonrp.launcher",
    "productName": "Horizon RP",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!*.log",
      "!dist/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "Horizon-RP-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Horizon RP",
      "perMachine": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Rubier4",
        "repo": "HorizonLauncher"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rubier4/HorizonLauncher"
  }
}
